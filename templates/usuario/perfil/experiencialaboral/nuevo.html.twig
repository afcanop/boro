{% extends 'bases/admin.html.twig' %}
{% block body %}
    <section class="row">
        <div class="col-12 col-md-4 col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h4>Nueva experiencia laboral</h4>
                </div>
                <div class="card-body px-4 py-2-5">
                    <a href="{{ path('usuario_perfil_experiencia_laboral_lista') }}"
                       class="btn btn-primary">
                        <i class="bi bi-arrow-left"></i>
                    </a>
                    {{ form_start(form) }}
                    {{ form_errors(form) }}
                    <div class="row">
                        {{ form_row(form.compania) }}
                        {{ form_row(form.descripcionCargo) }}
                        {{ form_row(form.fechaDesde) }}
                        {{ form_row(form.fechaHasta) }}
                        {{ form_row(form.estadoActivo) }}
                        {{ form_row(form.btnGuardar) }}
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        {{ include('componentes/HojaVida.html.twig', {arPerfil: arPerfil}) }}
    </section>

{% endblock %}