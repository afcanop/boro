{% extends 'bases/admin.html.twig' %}
{% block body %}

    <section class="row">
        <div class="col-12 col-md-4 col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h4>Experiencia laboral</h4>
                </div>
                <div class="card-body px-4 py-2-5">
                    <a href="{{ path('usuario_perfil_experiencia_laboral_nuevo', {'codigoExperienciaLaboral': 0}) }}"
                       class="btn btn-primary">Nuevo</a>
                    <table class="table table-hover mt-3">
                        <tbody>
                        {% for arExperienciaProfecional in arExperienciaProfecionales %}
                            <tr>
                                <td>
                                    {{ arExperienciaProfecional.compania }}
                                    <br>
                                    {{ arExperienciaProfecional.fechaDesde |date("m-Y")  }} - {{ arExperienciaProfecional.fechaHasta  |date("m-Y")  }}
                                </td>
                                <td class="d-flex justify-content-between">
                                    <a href="{{ path('usuario_perfil_experiencia_laboral_nuevo', {'codigoExperienciaLaboral': arExperienciaProfecional.id}) }}"><i
                                                class="bi bi-pencil"
                                                style="font-size: 2rem; color: cornflowerblue;"></i> </a>
                                    <a href=""><i class="bi bi-trash3"
                                                  style="font-size: 2rem; color: cornflowerblue;"></i> </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        {{ include('componentes/HojaVida.html.twig', {
            arPerfil: arPerfil,
            arExperienciaProfecionales: arExperienciaProfecionales
        }) }}
    </section>

{% endblock %}